<body id="postPage">
    <h1>The Resistance Directives</h1>

    <p>
    <a href="/view" id="createLink">Create</a>
    </p>

  <div class="container1">
  <%if(locals.add) {%>
    <form action="/submit" method="post">
        <input name="name" type="text" class="articlePost" placeholder="name" />
        <input name="article" type="forum" class="articlePost"
            placeholder="Spread the truth" row="3" id="aPost"></input>
        <input type="submit" value="SUBMIT" />
    </form>
    <%}%>
  </div>

  <div class="container2">
    <%if(locals.editMode) {%>
        <form action="/submit" method="post">
            <input name="name" type="text" class="articlePost" value="<%=userName%>" />
            <input name="article" type="text" class="articlePost"
                value="<%=article%>"></input>
            <input value=<%=ID%> name="id" type="hidden">
            <input type="submit" value="SUBMIT" />
        </form>
    <%}%>
    </div>

    <div class="container3">
    <%if(locals.posts.length===0) {%>
    <h2>Currently no new directives</h2>
    <%} else { for (let i = 0; i < posts.length; i++) {%>
        <form action="/edit" method="post">
            <h2><%=posts[i]["name"]%></h2>
            <p><%=posts[i]["article"]%></p>
            <p><%=posts[i]["timeStamp"]%></p>
            <input value=<%=i%> name="id" type="hidden">
            <input type="submit" name="submitButt"value="🗑️" />
            <input type="submit" name="submitButt"value="✍️" />
        </form>
        <%}}%>
    </div>
</body>

